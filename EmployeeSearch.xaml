<UserControl x:Class="NETD3202_RyanClayson_Lab2.EmployeeSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NETD3202_RyanClayson_Lab2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <!--Start of Grid-->
    <Grid>
        <!--Start of Stack Panel-->
        <StackPanel Grid.Column="1" Margin=" 50">
          <Label Content="Search" HorizontalAlignment="Center"/>
          <Label Content="Employee ID" HorizontalAlignment="Left"/>
          <TextBox x:Name="txtSearchEmployee"/>
          <!--<Button x:Name="btnSearchEmployee" Content="Search" Margin="50" Click="btnSearchEmployee_Click"/> -->
            <Button x:Name="btnSearchEmployee" Content="Search" Margin="50" Click="btnSearchEmployee_Click" />
            <!--Start of Data Grid -->
            <DataGrid Name="searchEmployeeGrid" />
          <!--End of Stack Panel -->
        </StackPanel>
        <!--End of Grid -->
    </Grid>
  <!--End of User Control-->
</UserControl>
